!!!
%html{"ng-app" => "Expertise"}
  %head
    %title= @page_title or "Page Title"
    -#= stylesheet_link_tag    "/bootstrap/bootstrap.min", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "expertise", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "font-awesome.min", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    :css
      #{yield :stylesheets}
  %body
    %header.navbar.navbar-inverse{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %nav.collapse.navbar-collapse
          %a#logo{href: "/welcome"} EXPERTISE
          %ul.nav.navbar-nav.pull-right
            %li
              %a{href: "/expertise"}Експертизи
            - if user_signed_in?
              %li
              .text-success.singned-user
                %li
                  %a#sign_out{href: "/"} Користувач #{current_user.email}
    %div{"ng-view" => ""}
    = javascript_include_tag "expertise", media: "all", "data-turbolinks-track" => true
