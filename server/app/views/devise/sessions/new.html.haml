%h2 Вхід
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-group
    = f.label :email, nil, class: 'small_label'
    = f.email_field :email, :autofocus => true,  class: "form-control"
  .form-group
    = f.label :Пароль, nil, class: 'small_label'
    = f.password_field :password,  class: "form-control"
  - if devise_mapping.rememberable?
    .checkbox
      = f.check_box :remember_me
      = f.label :"Запам'ятати_мене"
  .form-group
    = button_tag "Ввійти", :class => "btn btn-primary btn-block"
    = link_to "Відновити пароль", new_user_password_path